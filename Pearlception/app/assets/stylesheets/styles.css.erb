.custom_li{
    background-color:rgba(225, 223, 223,.5);
}
/*
--------------Font Styles----------------
*/
.roboto_font{
    font-family: 'Roboto',sans-serif;
    font: 'Roboto';
    font-weight: bold;
}

.white_font{
    color: #FFFFFF;
}

/*
-----------Images and Backgrounds----------------
*/

.bay_background{
    background: url(<%= asset_path "bay_background_2.jpg"%>);
    background-attachment: fixed;
    background-size: 100% auto;
    background-repeat: no-repeat;
}

/*
------------Alignment Styles-------------
*/
.center_item{
    margin:  auto;
    width: 50%;
    height: auto;
}

.footer{
    margin-top:10%
}

.form_header{
    margin-top:2%;
    margin-bottom:3%;
}


.center-text{
    text-align: center;
}

/*
--------------Table Styles----------------
*/
.custom_tr{
    background-color:white;
}

/*
-------------Chart Styles----------------
*/
.chart{
    /*Initially background will be clear*/
    position: fixed;
    margin-left:0 auto;
    background-color: transparent;
}
